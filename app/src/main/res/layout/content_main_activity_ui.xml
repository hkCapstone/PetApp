<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.george.petapp.MainActivityUI"
    android:background="#eb17eec3"
    android:padding="5dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lost_button"
        android:id="@+id/lostButtonId"
        android:layout_gravity="left"
        android:clickable="true"
        android:background="#c44c53e3"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:padding="15dp"
        android:layout_margin="1dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/found_button"
        android:id="@+id/foundButtonId"
        android:background="#c44c53e3"
        android:clickable="true"
        android:textStyle="bold"
        android:padding="15dp"
        android:layout_alignTop="@+id/lostButtonId"
        android:layout_toRightOf="@+id/lostButtonId"
        android:layout_toEndOf="@+id/lostButtonId" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/map_button"
        android:id="@+id/mapButtonId"
        android:background="#c44c53e3"
        android:clickable="true"
        android:textStyle="bold"
        android:padding="15dp"
        android:layout_alignTop="@+id/foundButtonId"
        android:layout_toRightOf="@+id/foundButtonId"
        android:layout_toEndOf="@+id/foundButtonId" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lostButtonId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="492dp"
        android:id="@+id/listView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lostButtonId"
        android:layout_margin="2dp"

        android:background="@android:color/holo_blue_bright"
        android:clickable="true"
        android:contextClickable="true" />
    </LinearLayout>

</RelativeLayout>
